generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url = "mysql://root:admin@localhost:3315/prisma_3147251"
}
model empresas{
  id Int @id @default(autoincrement())
  name String
  Nit Int
  Direccion String
  Telefono Int
  Email String
  Localidad String
  Ciudad String
  conductor conductores[]
}
model conductores{
    id Int @id @default(autoincrement())
    Nombre String
    email String 
    Telefono Int
    Numero_Licencia Int
    empresas_id Int
    empresas empresas @relation(fields: [empresas_id], references: [id])
}