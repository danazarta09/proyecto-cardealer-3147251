generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model empresas{
  id Int @id @default(autoincrement())
  name String 
  conductor conductores[]
}
model conductores{
    id Int @id @default(autoincrement())
    name String
    email String 
    phone Int
    licenseNumber Int
    empresa_id Int
    empresa empresas @relation(fields: [empresa_id], references: [id])
}